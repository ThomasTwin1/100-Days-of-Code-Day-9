# Introduction
print("Welcome to the secret auction where you will bid in secret against other bidders.\n"
      "Whoever has the highest bid wins.\n"
      "You will not see any other bids besides the winner's.\n"
      "Hope you're ready because the stakes are high.\n")

# Initialize the dictionary to store bids
auction_bids = {}

# Main auction loop
while True:
    # Collect user name and bid
    name = input("Hello, what's your name?\n")
    while True:
        try:
            bid = int(input(f"What would you like to bid, {name}? (Please use numerals only)\n"))
            break
        except ValueError:
            print("This is not a numeral. Try again.")
    
    # Save the bid to the dictionary
    auction_bids[name] = bid
    print(f"Thank you, {name}. Your bid of ${bid} has been placed!")

    # Ask if there are more participants
    while True:
        more_bids = input("Are there others that need to bid? (Please type Yes or No)\n").lower()
        if more_bids in ['yes', 'no']:
            break
        else:
            print("This is not a valid response. Please type Yes or No.")
    
    # If no more bids, break out of the loop
    if more_bids == 'no':
        break

# Determine the highest bid and the winner
highest_bid = max(auction_bids.values())
winners = [name for name, bid in auction_bids.items() if bid == highest_bid]

# Announce the winner(s)
print("\nAuction Results:")
if len(winners) == 1:
    print(f"The winner is {winners[0]} with a bid of ${highest_bid}!")
else:
    print(f"It's a tie! The winners are {', '.join(winners)} with a bid of ${highest_bid}!")

# Display all bids (optional, if you want to see the full list)
print("\nAll Bids:")
for participant, amount in auction_bids.items():
    print(f"{participant}: ${amount}")
